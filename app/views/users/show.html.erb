

<% if current_user.id == @user.id %>
<div class="col-xs-12" style="padding-bottom: 20px; background-color: rgb(220, 220, 220);">
  <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-6 col-sm-offset-3" style="padding: 50px; background-color: white; margin-top: 50px; border-radius: 4px;">
    <h1>Your profile :</h1><br>
    <div class="row">
        <%= simple_form_for @user do |f| %>
        <%= f.input :first_name, input_html: { value: "#{@user.first_name}" } %>
        <%= f.input :last_name, input_html: { value: "#{@user.last_name}" } %>
        <%= f.input :email, input_html: { value: "#{@user.email}" } %>
        <%= f.input :birth_date, input_html: { value: "#{@user.birth_date}" } %>
        <%= f.input :address, input_html: { value: "#{@user.address}" } %>
        <%= f.input :bio, input_html: { value: "#{@user.bio}" } %>
        <%= f.input :phone, input_html: { value: "#{@user.phone}" } %>
        <%= f.input :avatar, as: :attachinary %>
        <%= f.button :submit %>
      <% end %>
    </div>
  </div>
</div>
<% else %>
<div class="col-xs-12" style="padding-bottom: 20px;">
Sorry, this page is not available for you. Please log in again.
</div>
<% end %>
